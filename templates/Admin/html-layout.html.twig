<html lang="ua">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
        {% block title %} Felichita admin {% endblock %}

    </title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" >
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" ></script>

</head>
<body>
<!--navigation bar-->
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('admin_dashboard') }}">Felichita</a>

        <div class="show navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_product_list') }}">Products</a>
                </li>

                <li class="nav-item"></li>
                <a class="nav-link" href="{{ path('admin_product_category_list') }}">Categories</a>
            </ul>
        </div>
    </div>
</nav>

<div class="container pt-5" >
    {% if app.session.flashBag.has('success') %}
    <div class="alert alert-success">
        {% for massage in app.session.flashBag.get('success')%}
        {{ massage }}<br/>
        {% endfor %}
    </div>
    {% endif %}

    <h1 class="text-center ">{% block page_title %}{% endblock %}</h1>

    {% block page_content %}
    hallo this is dashboard page
    {% endblock %}

</div>
</body>
</html>